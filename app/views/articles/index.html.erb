<h1>Listando Artigos</h1>

<%= link_to 'Criar novo artigo', new_article_path %>
<table>
  <tr>
    <th>Título</th>
    <th>Texto</th>
    <th>Ações</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Visualizar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td>
        <%= 
          link_to 'Excluir', article_path(article),
          method: :delete,
          data: { confirm: 'Are you sure?' }
        %>
      </td>
    </tr>
  <% end %>
</table>